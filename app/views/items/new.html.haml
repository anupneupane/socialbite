%h1
  Add a new Item
-form_for(@item, :html => { :multipart => true , :id => "editor_form"}) do |f|
  %div
    =f.label :page_id, "which page should it be on?"
    = collection_select :item, :page_id, @pages, :id, :name
  %div
    =f.label :title
    =f.text_field :title
  %div
    =f.label :body
    =f.text_area :body, :id => "content"
  %div
    =f.label :tag_list
    =f.text_field :tag_list

  %div
    =f.submit "Create", :id => "trigger"
-content_for :onReady do
  :plain
    Event.observe(window, 'load', function() {
      myEditor = new WysiHat.Editor.attach('content');
      var ribbon = new Toolbar(myEditor);
      ribbon.addButtonSet(WysiHat.Toolbar.ButtonSets.Advanced);
      $('editor_form').observe('submit',function(ev){
        ev.stop();
        myEditor.save();
        $('editor_form').submit();
      });
    });

